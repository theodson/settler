# EditorConfig https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.sh]
trim_trailing_whitespace = false
max_line_length = 180
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = 180

[*.{yml,yaml}]
indent_size = 2
